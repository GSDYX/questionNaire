<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="shiro.mapper.PermissionMapperCustom" >


    <!-- 根据用户id查询权限 -->
    <select id="findPermissionListByUserId" parameterType="Integer" resultType="shiro.pojo.Permission">
        SELECT
        *
        FROM
        permission
        WHERE
        permission_id IN
        (SELECT
        permission_id
        FROM
        role_permission
        WHERE role_id IN
        (SELECT
        role_id
        FROM
        user_role
        WHERE user_id = #{id}))
    </select>


</mapper>